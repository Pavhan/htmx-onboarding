<div id="stats-card" class="bg-white p-6 rounded shadow-md">
  <h2 class="text-xl font-bold mb-4">Task Statistics</h2>
  <div class="space-y-2">
    <div class="flex justify-between">
      <span class="font-semibold">Done:</span>
      <span class="text-green-600">{{ stats.done }}</span>
    </div>
    <div class="flex justify-between">
      <span class="font-semibold">Not Done:</span>
      <span class="text-blue-600">{{ stats.notDone }}</span>
    </div>
    <div class="flex justify-between border-t border-gray-300 pt-2 mt-2">
      <span class="font-bold">Total:</span>
      <span class="font-bold">{{ stats.total }}</span>
    </div>
  </div>
  <button
    onclick="openModal()"
    class="mt-4 w-full px-4 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded transition-colors"
  >
    Open tasks in modal
  </button>
</div>

