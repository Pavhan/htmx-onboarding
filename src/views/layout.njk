<!doctype html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8" />
    <title>{% block title %}TO-DO LIST{% endblock %}</title>
    <meta
      name="description"
      content="{% block description %}Starter project with Express Nunjucks TailwindCSS{% endblock %}"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://unpkg.com/htmx.org@1.9.12" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="min-h-screen bg-gray-100">
    <div class="container mx-auto px-4 py-8">
      <div class="flex flex-col gap-6 lg:flex-row">
        <aside class="lg:w-1/4">{% include 'partials/stats.njk' %}</aside>
        <main class="flex-1">{% block content %}{% endblock %}</main>
      </div>
    </div>
  </body>
</html>
