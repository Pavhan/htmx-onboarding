{% extends "layout.njk" %} {% block content %}
<h1 class="mb-6 text-3xl font-bold">TO-DO LIST</h1>

<!-- Add Task Form -->
<form hx-post="/tasks" hx-swap="none" hx-on::after-request="if(event.detail.successful) this.reset()" class="mb-6">
  <div class="flex gap-2">
    <input
      type="text"
      name="title"
      placeholder="Enter task title..."
      required
      class="flex-1 rounded border border-gray-300 bg-white px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
    />

    <button type="submit" class="rounded bg-blue-500 px-6 py-2 text-white transition-colors hover:bg-blue-600">
      Add
    </button>
  </div>
</form>

<!-- Task List -->
<div id="task-list">{% include 'partials/task-list.njk' %}</div>

{% endblock %}

