{
  "name": "express-nunjucks-tailwind",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A starter project with Express, Nunjucks and TailwindCSS",
  "scripts": {
    "dev": "concurrently \"node --watch src/server.js\" \"browser-sync start --config bs-config.cjs\"",
    "dev:server": "node --watch src/server.js",
    "format": "prettier --write \"src/**/*.{js,njk,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,njk,css}\""
  },
  "dependencies": {
    "express": "4.18.2",
    "nunjucks": "3.2.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.7.1",
    "tailwindcss": "3.4.18"
  }
}
